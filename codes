def chatbot_response(user_input):
    user_input = user_input.lower()

    if user_input in ["hi", "hello", "hey"]:
        return "Hi there! ğŸ˜Š"
    elif user_input in ["how are you", "how are you?"]:
        return "I'm fine, thank you! How about you?"
    elif user_input in ["i'm fine", "i am fine", "fine", "good"]:
        return "Glad to hear that!"
    elif user_input in ["thanks", "thank you"]:
        return "You're welcome!"
    elif user_input in ["bye", "goodbye", "exit", "quit"]:
        return "Goodbye! Have a nice day ğŸ‘‹"
    else:
        return "I'm sorry, I didn't understand that. Can you rephrase?"

def start_chatbot():
    print("ğŸ¤– ChatBot: Hello! Iâ€™m your friendly chatbot. Type 'bye' to exit.\n")

    while True:
        user_input = input("You: ")

        response = chatbot_response(user_input)

        print(f"ChatBot: {response}")

        if user_input.lower() in ["bye", "goodbye", "exit", "quit"]:
            break

if __name__ == "__main__":
    start_chatbot()
